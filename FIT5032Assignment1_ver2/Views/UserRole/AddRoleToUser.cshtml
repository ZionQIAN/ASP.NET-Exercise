
@{
    ViewBag.Title = "AddRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Role To User</h2>

@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()

    <div class=" form-horizontal">
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <label class="control-label col-md-2">User Name</label>
            <div class="col-md-10">
                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", required = "required"} })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Role Name</label> 
            <div class="col-md-10">
                @Html.DropDownList("RoleName",(IEnumerable<SelectListItem>)ViewBag.Roles, "Select items", htmlAttributes: new { @class = "form-control", required = "required"})
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Add Role To User" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<td>
    @Html.ActionLink("Back", "Index", "UserRole")

</td>