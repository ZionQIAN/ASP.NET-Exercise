
@{
    ViewBag.Title = "DeleteRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Role to User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">User Name</label>
                <br>
                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label col-md-2">Role Name</label>
                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control", required = "requied" })
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-offset-2 col-md-10">
                <input type="submit" value="Delete Role" class="btn btn-default" />
            </div>
        </div>
    </div>


}

<td>
    @Html.ActionLink("Back", "Index", "UserRole")

</td>

